.c-hero__main {
  height: 80vh;
  width: 100%;
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  overflow: visible;

  .c-hero__main-bg-container {
    // left: 0;
    width: 37.5%;
    height: 100%;
    img {
      background-color: #d8d8d8;
    }
    // position: absolute;

  }
  .c-hero__main-bg {
      // flex: none;
      // width: 100%;
      height: 100%;
      object-fit: cover;
      overflow: hidden;

  }
  .c-hero__maincontainer {
    // padding-left: 100px;
    width: 960px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .c-hero__subcontainer {
    display: inline-flex;
    // flex-direction: column;
    // justify-content: space-between;
  }
  .c-hero__text-container {
    // padding-left: 8%;
    // width: 60%;
  }
}
.c-hero__lower-container {
  display: inline-flex;
  width: 100%;
  height: 170px;
  // margin-top: 100px;
  // text-align: center;
  // justify-content: center;
  align-items: center;

  .c-hero__lower-container-arrows {
    width: 40%;
  }

  .c-hero__lower-container-feature {
    display: inline-flex;
    width: 60%;
    height: 100%;
    align-items: center;
    background-color: #1b1b1b;
    font-family: 'Source Sans Pro', sans-serif;
    font-size: 15px;
    font-weight: 400;
    line-height: 1.44;
    color: #ffffff;
  }
  .c-hero__feature-text-container {
    padding: 10px;
    width: 55%;
    height: auto;
    font-size: 18px;
    font-weight: 500px;
    h4 {
      font-family: 'Source Sans Pro', sans-serif;
      font-weight: 900;
      font-size: 10px;
      letter-spacing: 1.5px;
    }
  }

  .c-hero__feature-image-container {
    width: 30%;
    height: 100%;
    padding: 2%;
    align-items: center;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      overflow: hidden;
    }
  }

}

h1 {
  font-size: 158px;
  font-family: 'Alice', serif;
  font-weight: 400;
  line-height: 120px;
  margin-bottom: 0;
}
h5 {
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 500;
  margin: 60px 0;
  font-size: 18px;
}
button {
  background-color: transparent;
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 900;
  font-size: 12px;
  letter-spacing: 1.5px;
}
.c-hero__shop-button{
  width: 240px;
  height: 72px;
  border-radius: 36px;
  border: solid 1px #c2c2c2;
  margin-bottom: 5px;
}


.c-hero__main-bg-arrow {
  width: 56px;
  height: 56px;
  border: solid 1px #c2c2c2;
  border-radius: 50%;
  font-size: 24px;
  font-weight: 100;
}

.c-hero__social-sidebar {
  padding-top: 80.4px;
  height: 100%;
  display: flex;
  flex-direction: column;
  ul {
    // position: absolute;
    // right:0;
    list-style-type: none;
    padding: 0 48px;
    width: 120px;
    margin: 0;
    // padding: 0;

    li {
      margin: 48px 0;
      padding-left: 0;
    }
  }

  hr {
    width: 2px;
    height: 66px;
    background: #111111;
    border: none;
  }
}
