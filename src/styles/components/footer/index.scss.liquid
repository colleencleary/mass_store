footer {
  width: 100%;
  display: inline-flex;

  div {
    width: 50%;
    text-align: center;
    padding: 44px 0;
    font-family: 'Source Sans Pro', sans-serif;
    font-weight: 100;
    font-size: 16px;
    letter-spacing: 1.5px;
    color: #707070;
  }
  form {
    width: 100%;
    display: inline-flex;
    justify-content: center;
  }

  input {
    width: 50%;
    text-align: center;
  }
  input:focus {
    outline: none;
  }
}
